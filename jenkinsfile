pipeline {
    agent any
    environment {
      PATH = "/var/jenkins_home/go/bin:${env.PATH}"
    }
    stages {
        stage('test') {
            steps {
                sh 'go test'
            }
        }
        stage('build') {
            steps {
                sh 'docker build -t test:$(git rev-parse --short HEAD) .'
            }
        }
    }
}
